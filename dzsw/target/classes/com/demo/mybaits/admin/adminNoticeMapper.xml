	<insert id="addNotice" parameterType="Notice">

		insert into notice (ntitle, ncontent)
		values (#{ntitle,jdbcType=VARCHAR}, trim(#{ncontent,jdbcType=VARCHAR}))
	</insert>

	<select id="selectAllNotices" resultType="Notice">
		select * from notice
	</select>

	<delete id="deleteNotice" parameterType="java.lang.String">
		delete from notice
		where noticeid = #{noticeid,jdbcType=VARCHAR}
	</delete>
	<!-- 批量删除 -->
	<delete id="deleteNotices" parameterType="List">
		delete from notice where noticeid in
		<foreach item="item" index="index" collection="list" open="("
			separator="," close=")">
			#{item}
		</foreach>
	</delete>
	<select id="selectAllNoticesByPage" resultType="Notice"
		parameterType="map">
		select * from (select rownum rn,a.* from notice a where rownum <![CDATA[<=#{perPageSize}]]>
		order by noticeid)
		where rn >= #{startIndex}  <!-- //起始行，y = (startPage-1)*pageSize+1 --> <!-- //结束行，x = startPage*pageSize <![CDATA[<=#{startIndex}]]> -->
	</select>


	<select id="selectNoticeById" resultType="Notice"
		parameterType="java.lang.String">
		select * from notice where noticeid=#{noticeid,jdbcType=VARCHAR}
